<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:rabbit="http://www.springframework.org/schema/rabbit"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
  http://www.springframework.org/schema/rabbit
  http://www.springframework.org/schema/rabbit/spring-rabbit-1.6.xsd">

  <bean id="caseReceiptMarshaller" class="import org.springframework.boot.configurationprocessor.metadata.JsonMarshaller">
  </bean>

  <bean id="caseReceiptMarshallingMessageConverter"
    class="org.springframework.amqp.support.converter.MarshallingMessageConverter">
    <constructor-arg ref="caseReceiptMarshaller"/>
    <property name="contentType" value="application/json"/>
  </bean>

  <rabbit:template id="caseReceiptRabbitTemplate" connection-factory="connectionFactory"
    exchange="case-outbound-exchange" routing-key="Case.Responses.binding"
    message-converter="caseReceiptMarshallingMessageConverter" channel-transacted="true"/>
</beans>
